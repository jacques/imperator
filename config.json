{
  "port": 3000,
  "address": "0.0.0.0",
  "mongoose": {
    "url": "mongodb://localhost/imperator"
  },
  "session": {
    "secret": "Imperator!",
    "opts": {
      "db": "imperator"
    }
  },
  "models": [
    "user",
    "environment",
    "platform",
    "tier",
    "machine"
  ],
  "routes": {
    "dashboard": {
      "mount": "/",
      "controllers": [ "index" ]
    },
    "auth": {
      "mount": "/",
      "controllers": [ "auth" ]
    },
    "environment": {
      "mount": "/environment",
      "controllers": [ "inventory/environment" ]
    },
    "platform": {
      "mount": "/platform",
      "controllers": [ "inventory/platform" ]
    },
    "tier": {
      "mount": "/tier",
      "controllers": [ "inventory/tier" ]
    },
    "machine": {
      "mount": "/machine",
      "controllers": [ "inventory/machine", "inventory/machine_actions" ]
    }
  },
  "tasks": [
    {
      "name": "update_environments",
      "interval": 600,
      "enabled": true
    }
  ]
}
