{
  "port": 3000,
  "address": "0.0.0.0",
  "mongoose": {
    "url": "mongodb://localhost/imperator"
  },
  "session": {
    "secret": "Imperator!",
    "opts": {
      "db": "imperator"
    }
  },
  "models": [
    "user",
    "environment",
    "platform"
  ],
  "routes": {
    "dashboard": {
      "mount": "/",
      "controllers": [ "index" ]
    },
    "auth": {
      "mount": "/",
      "controllers": [ "auth" ]
    },
    "environment": {
      "mount": "/environment",
      "controllers": [ "inventory/environment" ]
    },
    "platform": {
      "mount": "/platform",
      "controllers": [ "inventory/platform" ]
    }
  }
}
