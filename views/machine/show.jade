extends ../layout

block content
	h1 Machine

	dl
		dt Name
		dd= machine.name
		dt State
		dd= machine.state
		dt Id
		dd= machine.id
		if machine.tier
			dt Tier
			dd
				a(href='/tier/#{machine.tier.id}')= machine.tier.name
		if machine.platform
			dt Platform
			dd
				a(href='/platform/#{machine.platform.id}')= machine.platform.name
		if machine.environment
			dt Environment
			dd
				a(href='/environment/#{machine.environment.id}')= machine.environment.name
