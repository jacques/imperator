extends ../layout

block append breadcrumbs
	ol.breadcrumb
		li
			a(href='/environment/#{platform.environment.id}')= platform.environment.name
		li.active= platform.name

block content
	h1 Platform

	dl
		dt Name
		dd= platform.name
		dt Id
		dd= platform.id
		if platform.environment
			dt Environment
			dd
				a(href='/environment/#{platform.environment.id}')= platform.environment.name
